.form
	display block

	&__input
		width 100%
		background-color transparent
		border none
		outline none
		color #ae82da
		border-bottom 1px solid #ae82da
		transition all .1s ease-in-out

	&__input:focus
		border-bottom 1px solid #fff

	&__name
		@media screen and (max-width: 639px)
			margin-bottom 30px

		@media screen and (min-width: 640px)
			margin-bottom 65px

	&__btn
		display block
		margin 0 auto
		text-transform uppercase
		color #5e06b6
		background-color #00dcb4
		font-weight 600
		border none
		outline none
		transition all .1s ease-in-out

		@media screen and (max-width: 639px)
			width 270px
			height 50px

		@media screen and (min-width: 640px)
			margin 0 auto
			width 540px
			height 95px

	&__btn:hover
		background-color #11efc7
