.or
	display block
	margin-top 15px

	&__title
		position relative
		text-align center
		color #ffffff
		font-size 18px
		font-weight 700
		padding-x 5px

		&:after,
		&:before
			position absolute
			content ''
			top 10px
			right 0
			width 120px
			border-top 1px solid #7216ce

		&:before
			left 0
