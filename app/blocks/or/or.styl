.or
	display block

	@media screen and (max-width: 639px)
		margin-top 15px

	@media screen and (min-width: 640px)
		margin-top 40px

	&__title
		position relative
		text-align center
		color #ffffff
		font-weight 700
		padding-x 5px

		@media screen and (max-width: 639px)
			font-size 18px

		@media screen and (min-width: 640px)
			font-size 32px

		&:after,
		&:before
			position absolute
			content ''
			right 0

			@media screen and (max-width: 639px)
				width 120px
				border-top 1px solid #7216ce
				top 10px

			@media screen and (min-width: 640px)
				width 240px
				border-top 2px solid #7216ce
				top 15px

		&:before
			left 0
