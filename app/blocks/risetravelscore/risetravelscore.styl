.risetravelscore
	display block

	&__text
		text-align center
		color #decdf0

		@media screen and (max-width: 639px)
			margin-top 20px
			font-size 16px

		@media screen and (min-width: 640px)
			margin 0 auto
			width 400px
			margin-top 50px
			font-size 28px

	&__btn
		display block
		margin 0 auto
		text-transform uppercase
		color #5e06b6
		background-color #00dcb4
		font-weight 700
		border none
		border-radius 5px
		outline none
		transition all .1s ease-in-out

		@media screen and (max-width: 639px)
			width 270px
			height 50px
			margin-top 20px

		@media screen and (min-width: 640px)
			width 540px
			height 100px
			margin-top 40px
			font-size 32px

	&__btn:hover
		background-color #11efc7
