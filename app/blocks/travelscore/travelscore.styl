.travelscore
	display block

	@media screen and (max-width: 639px)
		margin-top 30px

	@media screen and (min-width: 640px)
		margin-top 50px

	&__title
		color #fff
		text-align center

		@media screen and (max-width: 639px)
			font-size 14px

		@media screen and (min-width: 640px)
			font-size 24px

	&__result
		color #fff
		text-align center
		font-weight 300

		@media screen and (max-width: 639px)
			font-size 80px
			line-height 100px

		@media screen and (min-width: 640px)
			font-size 130px
			line-height 150px
