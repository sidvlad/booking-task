.signing
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	display flex
	align-items center
	justify-content center
	overflow auto

	&__title
		color #fff
		font-weight 700
		text-transform uppercase

		@media screen and (max-width: 639px)
			font-size 18px

		@media screen and (min-width: 640px)
			font-size 32px
