.header
	display block
	width 100%
	display flex
	justify-content space-between

	@media screen and (max-width: 639px)
		font-size 18px
		margin-bottom 50px

	@media screen and (min-width: 640px)
		font-size 32px
		margin-bottom 95px

	&__name
		display flex
		color #fff

	&__back,
	&__profile
		display flex
		cursor pointer

	&__back:hover,
	&__profile:hover
		color #fff
		transition all .1s ease-in-out

.headerprofile
	display flex
	justify-content space-between

	@media screen and (max-width: 639px)
		font-size 18px

	@media screen and (min-width: 640px)
		font-size 22px
